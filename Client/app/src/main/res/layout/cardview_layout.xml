<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="user"
            type="at.aau.anti_mon.client.game.User"/>

        <variable
            name="viewModel"
            type="at.aau.anti_mon.client.ui.gamefield.GameFieldViewModel" />
    </data>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/player_icon"
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            tools:srcCompat="@drawable/competititor" />

        <TextView
            android:id="@+id/player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.username}"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/player_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.money}"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

</layout>