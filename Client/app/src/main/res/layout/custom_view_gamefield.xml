        android:id="@+id/field_square"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/field_square"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/field_square" />

    <ImageView
        android:id="@+id/start_field"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/start_field"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="@id/field_square"
        app:layout_constraintEnd_toEndOf="@id/field_square"
        app:layout_constraintTop_toTopOf="@id/guideline_bottom"
        app:srcCompat="@drawable/start" />

    <ImageView
        android:id="@+id/prison"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/price_war"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="@id/field_square"
        app:layout_constraintStart_toStartOf="@id/field_square"
        app:layout_constraintTop_toTopOf="@id/guideline_bottom"
        app:srcCompat="@drawable/price_war" />

    <ImageView
        android:id="@+id/sitting_field"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/sitting"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/field_square"
        app:layout_constraintStart_toStartOf="@id/field_square"
        app:layout_constraintBottom_toBottomOf="@id/guideline_top"
        app:srcCompat="@drawable/sitting" />

    <ImageView
        android:id="@+id/unlucky_field"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/price_war"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/field_square"
        app:layout_constraintEnd_toEndOf="@id/field_square"
        app:layout_constraintBottom_toBottomOf="@id/guideline_top"
