<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AntiMonopolyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WebSocketDemoApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".activities.PopActivityObjects"
            android:exported="false"
            android:theme="@style/AppTheme_PopUp"/>
        <activity
            android:name=".activities.PopActivityHandel"
            android:exported="false"
            android:theme="@style/AppTheme_PopUp" />
        <activity
            android:name=".activities.PopActivitySettings"
            android:exported="false"
            android:theme="@style/AppTheme_PopUp" />
        <activity
            android:name=".activities.ActivityGamefield"
            android:exported="false"
            android:screenOrientation="sensorLandscape" />
        <activity android:name=".activities.JoinGameActivity"
            android:exported="false"
            android:screenOrientation="sensorLandscape" />
        <activity android:name=".activities.LobbyActivity"
            android:exported="false"
            android:screenOrientation="sensorLandscape" />
        <activity android:name=".activities.LoadGameActivity"
            android:exported="false"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="false" />
        <activity
            android:name=".activities.StartNewGameActivity"
            android:exported="false"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".activities.GameInstructionsActivity"
            android:exported="false"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".activities.StartMenuActivity"
            android:exported="true"
            android:screenOrientation="sensorLandscape">

            <!-- Define this activity as the default/main activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>